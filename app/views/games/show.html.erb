<table>
  <tr>
    <td><strong><%= @game.away_team.full_name.upcase %></strong></td>
    <td><%= @game.away_score %></td>
  </tr>
  <tr>
    <td><strong><%= @game.home_team.full_name.upcase %></strong></td>
    <td><%= @game.home_score %></td>
  </tr>
  <tr>
    <td><%= @game.down.ordinalize %> & <%= @game.distance %></td>
    <td><%= @game.yard %></td>
  </tr>
  <tr>
    <td><%= @game.quarter.ordinalize %> Quarter</td>
    <td><%= Time.at(@game.time_remaining).strftime("%M:%S") %></td>
  </tr>
<% unless @game.complete %>
  <tr><td><%= link_to 'PLAY', play_game_path, method: :post %></td></tr>
<% end %>
</table>
