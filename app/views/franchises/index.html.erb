<h1>Available Franchises</h1>
 
<table>
  <tr>
    <th>City</th>
    <th>Mascot</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
 
  <% @franchises.each do |franchise| %>
    <tr>
      <td><%= franchise.city %></td>
      <td><%= franchise.mascot %></td>
      <td>Play</td>
      <td><%= link_to 'Show', franchise_path(franchise) %></td>
      <td><%= link_to 'Edit', edit_franchise_path(franchise) %></td>
      <td><%= link_to 'Destroy', franchise_path(franchise),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Create New Franchise', new_franchise_path %>