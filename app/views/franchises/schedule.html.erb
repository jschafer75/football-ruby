<h1><%= @franchise.league.year %> <%= @franchise.full_name %> Schedule</h1>

<ol>
  <% @schedule.each do |g| %>
    <% current_week = g.week == @franchise.league.week ? "* " : "" %>
    <% if g.home_score.nil? %>
      <li><%= link_to "#{current_week}#{g.away_team.full_name} :: #{g.home_team.full_name}", play_game_franchise_path(game_id: g.id), method: :post %></li>
    <% else %>
      <li><%= "#{current_week}#{g.away_team.full_name}: #{g.away_score}, #{g.home_team.full_name}: #{g.home_score}" %> 
    <% end %>
  <% end %>
</ol>