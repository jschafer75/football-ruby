<h1>Available Players</h1>
 
<table>
  <tr>
    <th>Name</th>
    <th>Position</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
 
  <% @players.each do |player| %>
    <tr>
      <td><%= player.name %></td>
      <td><%= player.position %></td>
      <td><%= link_to 'Show', franchise_player_path(@franchise, player) %></td>
      <td><%= link_to 'Edit', edit_franchise_player_path(@franchise, player) %></td>
      <td><%= link_to 'Destroy', franchise_player_path(@franchise, player),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to 'Create New Player', new_franchise_player_path(@franchise) %></p>
<p><%= link_to 'Back to Franchise', franchise_path(@franchise) %></p>