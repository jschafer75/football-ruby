<h1><%= @coach.name %></h1>
<h2><%= @coach.role %> - <%= display_franchise_name(@coach.franchise) %></h2>

<% if @coach.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@coach.errors.count, "error") %> prohibited
      this coach from being saved:
    </h2>
    <ul>
      <% @coach.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<% if @coach.franchise == @franchise%>
  <p><%= link_to 'Fire this Coach', release_franchise_coach_path(@franchise, @coach) %></p>
<% else %>
  <p><%= link_to 'Hire this Coach', sign_franchise_coach_path(@franchise, @coach) %></p>
<% end %>
<p><%= link_to 'Edit this Coach', edit_franchise_coach_path(@franchise, @coach) %></p>
<p><%= link_to 'Return to Coach List', franchise_coaches_path(@franchise) %></p>
